<refentry id="gvfs-set-attribute">

        <refentryinfo>
                <title>gvfs-set-attribute</title>
                <productname>gvfs</productname>

                <authorgroup>
                        <author>
                                <contrib>Developer</contrib>
                                <firstname>Alexander</firstname>
                                <surname>Larsson</surname>
